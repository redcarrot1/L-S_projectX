<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageView
        android:id="@+id/mv_name_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/name_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/tv_choose_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:text="캐릭터를 선택해주세요."
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="@+id/mv_name_bg"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/mv_name_bg"
        app:layout_constraintTop_toTopOf="@+id/mv_name_bg"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_man"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/conversation_man"
        app:layout_constraintEnd_toStartOf="@+id/btn_woman"
        app:layout_constraintHorizontal_bias="0.729"
        app:layout_constraintStart_toStartOf="@id/mv_name_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_character" />

    <Button
        android:id="@+id/btn_woman"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/conversation_woman"
        app:layout_constraintEnd_toEndOf="@+id/mv_name_bg"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="@+id/mv_name_bg"
        app:layout_constraintTop_toTopOf="@+id/btn_man" />

</androidx.constraintlayout.widget.ConstraintLayout>