<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/dialog_badge_info_bg"
        android:layout_width="334dp"
        android:layout_height="338dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/dialog_badge_info_bg"/>

    <TextView
        android:id="@+id/dialog_badge_info_new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new!"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/dialog_badge_info_title_tv"
        app:layout_constraintTop_toTopOf="@id/dialog_badge_info_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/dialog_badge_info_title_tv"
        android:textColor="#EA4933"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="3dp"/>

    <ImageView
        android:id="@+id/dialog_badge_info_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="@id/dialog_badge_info_bg"
        app:layout_constraintEnd_toEndOf="@id/dialog_badge_info_bg"
        app:layout_constraintTop_toTopOf="@id/dialog_badge_info_bg"
        app:layout_constraintBottom_toBottomOf="@id/dialog_badge_info_bg"
        app:layout_constraintVertical_bias="0.28"
        android:src="@drawable/badge_locked"/>

    <TextView
        android:id="@+id/dialog_badge_info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫 출석"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/dialog_badge_info_bg"
        app:layout_constraintEnd_toEndOf="@id/dialog_badge_info_bg"
        app:layout_constraintTop_toBottomOf="@id/dialog_badge_info_img"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/dialog_badge_info_context_tv"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="첫 출석을 축하해요!"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/dialog_badge_info_bg"
        app:layout_constraintEnd_toEndOf="@id/dialog_badge_info_bg"
        app:layout_constraintTop_toBottomOf="@id/dialog_badge_info_title_tv"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>