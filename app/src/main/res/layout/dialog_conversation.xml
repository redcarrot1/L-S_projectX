    <ImageView
        android:id="@+id/img_duck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/conversation_duck"
        app:layout_constraintBottom_toTopOf="@+id/img_background"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/conversation_man"
        app:layout_constraintBottom_toTopOf="@+id/img_background"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="228dp"
        android:src="@drawable/last"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/img_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="478dp"
        android:layout_height="259dp"
        android:scaleType="fitCenter"
        android:src="@drawable/conversation_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_name"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/conversation_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_background" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:text="이름"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_name"
        app:layout_constraintEnd_toEndOf="@+id/img_name"
        app:layout_constraintStart_toStartOf="@+id/img_name"
        app:layout_constraintTop_toTopOf="@+id/img_name" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="418dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="대화 내용"
        android:textAlignment="textStart"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/img_name"
        app:layout_constraintTop_toBottomOf="@+id/img_name" />


</androidx.constraintlayout.widget.ConstraintLayout>