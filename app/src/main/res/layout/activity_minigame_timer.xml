<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="450dp"
        app:layout_constraintHeight_max="900dp"
        android:background="@drawable/timer_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/timer_tab_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="@string/ku_timer"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/timer_pause_btn"
            app:layout_constraintBottom_toBottomOf="@id/timer_pause_btn"/>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/timer_pause_btn"
            android:layout_marginEnd="18dp"
            android:scaleType="fitCenter"
            android:id="@+id/timer_pause_btn"
            android:backgroundTint="@color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timer_tab_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="70dp"
        android:textSize="17dp"
        android:text="10초에 가까워졌을 때 버튼을 눌러 멈춰주세요!\n ±0.1초까지 인정됩니다."
        android:lineSpacingExtra="7dp"
        android:fontFamily="@font/pretendard_light"
        android:textAlignment="center"
        android:id="@+id/timer_question_tv"/>

        <TextView
            android:id="@+id/timer_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:text="00:"
            android:textSize="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/timer_milli"
            app:layout_constraintBottom_toTopOf="@id/timer_start_bt"
            android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/timer_result_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/timer_sec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="17dp"
            android:text="실패하셨습니다. 다시 시도해보세요!"
            android:textColor="@color/red"
            android:fontFamily="@font/pretendard_light"
            android:textAlignment="center"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/timer_milli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/timer_sec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/timer_start_bt"
            android:layout_marginBottom="40dp"
            android:text="00"
            android:textSize="70dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/timer_start_bt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/timer_start_button"
        android:background="@drawable/timer_start_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        app:layout_constraintVertical_bias="0.75"/>

    <Button
        android:id="@+id/timer_stop_bt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/timer_stop_button"
        android:background="@drawable/timer_stop_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.75"/>

    <Button
        android:id="@+id/timer_restart_bt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/timer_restart_button"
        android:background="@drawable/timer_restart_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.75"/>
        
    <ImageView
        android:id="@+id/timer_success_iv"
        android:layout_width="240dp"
        android:layout_height="144dp"
        android:src="@drawable/timer_congrat_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_result_tv"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>