<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_skyblue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="450dp"
        app:layout_constraintHeight_max="900dp">

        <TextView
            android:id="@+id/major_greeting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/police_agree"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="32dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="91dp" />


        <TextView
            android:id="@+id/major_intro_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/major_greeting_tv"
            app:layout_constraintTop_toBottomOf="@+id/major_greeting_tv"
            android:text="@string/major_choice"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="19dp"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/major_sc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대학"
            android:textSize="18dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            app:layout_constraintStart_toStartOf="@id/major_intro_tv"
            app:layout_constraintTop_toBottomOf="@id/major_intro_tv"
            android:layout_marginTop="70dp"/>

        <Spinner
            android:id="@+id/major_sc_spinner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            android:spinnerMode="dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/major_sc_tv"
            android:background="@drawable/spinner_theme"
            android:textAlignment="textStart"
            android:overlapAnchor="false"
            android:textColor="@color/white"
            android:popupBackground="@drawable/background_dropdown_spinner"
            android:dropDownVerticalOffset="65dp"
            android:dropDownSelector="@color/green_main"/>


        <TextView
            android:id="@+id/major_dp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학과"
            android:textSize="18dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            app:layout_constraintStart_toStartOf="@id/major_intro_tv"
            app:layout_constraintTop_toBottomOf="@id/major_sc_spinner"
            android:layout_marginTop="32dp"/>

        <Spinner
            android:id="@+id/major_db_spinner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            android:spinnerMode="dialog"
            app:layout_constraintStart_toStartOf="@id/major_dp_tv"
            app:layout_constraintTop_toBottomOf="@id/major_dp_tv"
            android:background="@drawable/spinner_theme"
            android:textAlignment="textStart"
            android:overlapAnchor="false"
            android:popupBackground="@drawable/background_dropdown_spinner"
            android:dropDownVerticalOffset="10dp"/>

        <Button
            android:id="@+id/agree_next_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="343:50"
            android:background="@drawable/button_blue"
            android:text="다음"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textSize="15dp"
            android:textColor="@color/button_blue"
            android:enabled="false"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="100dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>