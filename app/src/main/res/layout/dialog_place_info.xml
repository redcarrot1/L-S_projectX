<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/dialog_place_info_bg"
        android:layout_width="336dp"
        android:layout_height="497dp"
        android:src="@drawable/dialog_place_info_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <ImageView
        android:id="@+id/dialog_place_info_img"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/landmark_1"
        app:layout_constraintStart_toStartOf="@id/dialog_place_info_bg"
        app:layout_constraintEnd_toEndOf="@id/dialog_place_info_bg"
        app:layout_constraintTop_toTopOf="@id/dialog_place_info_bg"
        app:layout_constraintBottom_toBottomOf="@id/dialog_place_info_bg"
        app:layout_constraintVertical_bias="0.33"/>

    <TextView
        android:id="@+id/dialog_place_info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:textSize="20dp"
        android:text="산학협동관"
        app:layout_constraintStart_toStartOf="@id/dialog_place_info_img"
        app:layout_constraintEnd_toEndOf="@id/dialog_place_info_img"
        app:layout_constraintTop_toBottomOf="@id/dialog_place_info_img"
        android:layout_marginTop="18dp"/>

    <ScrollView
        android:id="@+id/dialog_place_info_scroll"
        android:layout_width="260dp"
        android:layout_height="57dp"
        app:layout_constraintStart_toStartOf="@id/dialog_place_info_bg"
        app:layout_constraintEnd_toEndOf="@id/dialog_place_info_bg"
        app:layout_constraintTop_toBottomOf="@id/dialog_place_info_title_tv"
        android:layout_marginTop="18dp"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:scrollbarThumbVertical="@color/scrollbar_thumb"
        android:scrollbarTrackVertical="@color/scrollbar_track"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="4dp"
        android:verticalScrollbarPosition="right"
        android:scrollbarStyle="outsideInset">

        <TextView
            android:id="@+id/dialog_place_info_context_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text="산학협동관은 교양 수업을 들을 때 주로 이용하는 건물이에요. 운이 좋으면 요들송을 들을 수 있으니 귀를 기울여 보세요!"/>

    </ScrollView>

    <Button
        android:id="@+id/dialog_place_info_close_btn"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:background="@drawable/button_blue_small"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:textSize="18dp"
        android:text="닫기"
        app:layout_constraintStart_toStartOf="@id/dialog_place_info_bg"
        app:layout_constraintEnd_toEndOf="@id/dialog_place_info_bg"
        app:layout_constraintBottom_toBottomOf="@id/dialog_place_info_bg"
        android:layout_marginBottom="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>