<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="450dp"
        app:layout_constraintHeight_max="900dp">

        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/map_map_fragment"
            tools:context=".activity.MapActivity"/>
<!--            android:name="com.google.android.gms.maps.SupportMapFragment"/>-->

        <Button
            android:id="@+id/map_attendance_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/map_attendance_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintVertical_bias="0.1"/>

        <Button
            android:id="@+id/map_badge_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/map_badge_btn"
            app:layout_constraintTop_toBottomOf="@id/map_attendance_btn"
            app:layout_constraintStart_toStartOf="@id/map_attendance_btn"
            app:layout_constraintEnd_toEndOf="@id/map_attendance_btn"
            android:layout_marginTop="7dp"/>

        <Button
            android:id="@+id/map_ranking_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/map_ranking_btn"
            app:layout_constraintTop_toBottomOf="@id/map_badge_btn"
            app:layout_constraintStart_toStartOf="@id/map_attendance_btn"
            app:layout_constraintEnd_toEndOf="@id/map_attendance_btn"
            android:layout_marginTop="7dp"/>

        <Button
            android:id="@+id/map_my_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/map_my_btn"
            app:layout_constraintTop_toBottomOf="@id/map_ranking_btn"
            app:layout_constraintStart_toStartOf="@id/map_attendance_btn"
            app:layout_constraintEnd_toEndOf="@id/map_attendance_btn"
            android:layout_marginTop="7dp"/>
        
        <Button
            android:id="@+id/map_explore_btn"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:background="@drawable/button_blue_small"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:text="탐험하기"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.875"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/map_background"/>

        <TextView
            android:id="@+id/map_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="19dp"
            android:text="사용자님"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.04"
            app:layout_constraintHorizontal_bias="0.08"/>

        <View
            android:id="@+id/map_badge_info_bg"
            android:layout_width="66dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.04"
            app:layout_constraintHorizontal_bias="0.92"
            android:background="@drawable/map_badge_info_bg"/>

        <View
            android:id="@+id/map_ranking_info_bg"
            android:layout_width="88dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/map_badge_info_bg"
            app:layout_constraintVertical_bias="0.04"
            android:background="@drawable/map_ranking_info_bg"
            android:layout_marginEnd="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textColor="@color/white"
            android:text="@string/ranking"
            app:layout_constraintTop_toTopOf="@id/map_ranking_info_bg"
            app:layout_constraintBottom_toBottomOf="@id/map_ranking_info_bg"
            app:layout_constraintStart_toStartOf="@id/map_ranking_info_bg"
            android:layout_marginStart="7dp"/>

        <TextView
            android:id="@+id/map_ranking_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textColor="@color/white"
            android:text="- 위"
            app:layout_constraintTop_toTopOf="@id/map_ranking_info_bg"
            app:layout_constraintBottom_toBottomOf="@id/map_ranking_info_bg"
            app:layout_constraintEnd_toEndOf="@id/map_ranking_info_bg"
            android:layout_marginEnd="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textColor="@color/white"
            android:text="배지"
            app:layout_constraintTop_toTopOf="@id/map_badge_info_bg"
            app:layout_constraintBottom_toBottomOf="@id/map_badge_info_bg"
            app:layout_constraintStart_toStartOf="@id/map_badge_info_bg"
            android:layout_marginStart="7dp"/>

        <TextView
            android:id="@+id/map_badge_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textColor="@color/white"
            android:text="0개"
            app:layout_constraintTop_toTopOf="@id/map_badge_info_bg"
            app:layout_constraintBottom_toBottomOf="@id/map_badge_info_bg"
            app:layout_constraintEnd_toEndOf="@id/map_badge_info_bg"
            android:layout_marginEnd="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>