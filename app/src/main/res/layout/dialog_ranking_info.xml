<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ranking_info_dialog_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="334dp"
        android:layout_height="208dp"
        android:src="@drawable/ranking_dialog_bg"/>
    
    <TextView
        android:id="@+id/dialog_ranking_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:text="랭킹기준"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ranking_info_dialog_bg"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/dialog_ranking_info_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="게임 별 점수의 합계 집계 + 출석점수\n출석 점수 : 10점\n게임 점수 : 랭킹 초기화 전까지 개인 최고 점수"
        app:layout_constraintStart_toStartOf="@id/ranking_info_dialog_bg"
        app:layout_constraintEnd_toEndOf="@id/ranking_info_dialog_bg"
        app:layout_constraintBottom_toBottomOf="@id/ranking_info_dialog_bg"
        android:layout_marginBottom="55dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>