<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3A3A3">

    <ImageView
        android:id="@+id/typing_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/typing_bg"
        app:layout_constraintDimensionRatio="375:403"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.umc.playkuround.custom_view.TextRainView
        android:id="@+id/typing_text_rain_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/typing_bg_iv"
        app:layout_constraintDimensionRatio="375:310"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:text="@string/typing_game"
        android:textColor="@color/text_color"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/typing_bg_iv"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/typing_score_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:text="SCORE"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/typing_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/neo_dunggeunmo_regular"
        android:text="0"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@id/typing_score_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/typing_life_1_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/typing_heart"
        app:layout_constraintBottom_toBottomOf="@id/typing_score_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/typing_score_tv" />

    <ImageView
        android:id="@+id/typing_life_2_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/typing_heart"
        app:layout_constraintBottom_toBottomOf="@id/typing_score_tv"
        app:layout_constraintEnd_toStartOf="@id/typing_life_1_iv"
        app:layout_constraintTop_toTopOf="@id/typing_score_tv" />

    <ImageView
        android:id="@+id/typing_life_3_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/typing_heart"
        app:layout_constraintBottom_toBottomOf="@id/typing_score_tv"
        app:layout_constraintEnd_toStartOf="@id/typing_life_2_iv"
        app:layout_constraintTop_toTopOf="@id/typing_score_tv" />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="139dp"
        android:layout_marginBottom="-25dp"
        android:src="@drawable/typing_character"
        app:layout_constraintBottom_toBottomOf="@id/typing_bg_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/typing_apply_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:text="수강신청"
            android:textColor="#128B50"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/typing_text_box"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/typing_text_box_bg"
            android:cursorVisible="false"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:hint="과목명 입력"
            android:imeActionLabel="입력"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="15dp"
            android:textAlignment="textStart"
            android:textColor="@color/text_color"
            android:textColorHint="#B1B1B1"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/typing_apply_btn_iv"
            app:layout_constraintStart_toEndOf="@id/typing_apply_title_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/typing_apply_btn_iv"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/typing_apply_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>